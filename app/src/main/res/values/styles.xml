<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/login_bg</item>
    </style>

    <style name="HeadlineText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="CredentialText">
        <item name="android:backgroundTint">@color/transparent_white</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TransactionInput">
        <item name="android:backgroundTint">@color/transparent_white</item>
        <item name="android:cursorVisible">false</item>
    </style>

    <style name="NavigationView">
        <item name="android:textColorSecondary">@color/transparent_white</item>
        <item name="android:textColor">@color/transparent_white</item>
        <item name="android:listDivider">@color/white</item>
        <item name="itemTextColor">@color/transparent_white</item>
        <item name="headerLayout">@layout/user_nav_header</item>
        <item name="menu">@menu/user_nav_drawer</item>
    </style>

    <style name="HintTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DrawerHeader">
        <item name="android:background">@drawable/header_bg</item>
    </style>

    <style name="BottomNavigation">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="itemBackground">@color/white</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="menu">@menu/bottom_navigation_user</item>
    </style>

    <style name="PieChart">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginBottom">?attr/actionBarSize</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="CardViewStyle" parent="CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="cardCornerRadius">6sp</item>
    </style>

    <style name="TextInputLayoutTransaction">
        <item name="android:layout_width">150sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:textColorHint">@color/transparent_white</item>
        <item name="hintTextAppearance">@style/HintTextAppearance</item>
    </style>

    <style name="TextInputEditTextTransaction" parent="TransactionInput">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:maxLength">@integer/maxCharacters</item>

    </style>

    <!-- 2 edittext & 2 buttons -->
    <style name="TransactionComponents">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:background">@drawable/btn_login_selector</item>
    </style>

    <style name="TransactionsFAB">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">70dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="fabSize">mini</item>
        <item name="srcCompat">@android:drawable/ic_input_add</item>
    </style>


</resources>
